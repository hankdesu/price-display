{
  "name": "price-display",
  "version": "1.0.0",
  "description": "價格顯示桌面應用程式",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "dist": "electron-builder --publish=never"
  },
  "author": "Hank",
  "license": "MIT",
  "build": {
    "appId": "com.example.price-display",
    "productName": "價格顯示器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "display.html"
    ],
    "win": {
      "target": [{
        "target": "portable",
        "arch": [
          "x64",
          "ia32"
        ]
      }]
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12"
  }
}
